<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidFundamentalTraining2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/smoke_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sky_blue</item>
        <item name="colorSecondaryVariant">@color/smoke_white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:textColorHint">@color/smoke_white</item>
        <item name="android:editTextColor">@color/smoke_white</item>
    </style>

    <style name="Theme.BlurryDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Button.Submit" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/sky_blue</item>
    </style>

    <style name="tabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="tabContentStart">24dp</item>
        <item name="tabTextColor">@color/smoke_white</item>
        <item name="tabIndicatorColor">@color/super_light_gray</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">5dp</item>
    </style>

    <style name="titleFont" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/smoke_white</item>
    </style>

    <style name="headerText" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/smoke_white</item>
    </style>

    <style name="movie_title" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/smoke_white</item>
    </style>

    <style name="prompt_text" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/smoke_white</item>
    </style>

    <style name="subtitleText" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="bodyText" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/smoke_white</item>
    </style>

    <style name="review_score" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

</resources>